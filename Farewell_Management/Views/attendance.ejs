<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Table</title>
    <link rel="stylesheet" href="stylesheet.css">
</head>
<body>
    <!-- Header -->
    <div class="header">
        <nav>
            <img src="LOGO.png" height="100px" width="100px" alt="Logo" float="left">
            <ul></ul><ul></ul><ul></ul><ul></ul><ul></ul><ul></ul><ul></ul><ul></ul>
            <a href="/"><button class="Login" align="right">Logout</button></a>
        </nav>
    </div>
    <!-- Header -->


                <div class="container">
                    <h1>Attendance Table</h1>
                    <table class="task-table">
                        <thead>
                            <tr>
                                <th>Attendance ID</th>
                                <th>Teacher ID</th>
                                <th>Student ID</th>
                                <th>Family Member ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% attendance.forEach(record => { %>
                                <tr>
                                    <td><%= record.attendanceid %></td>
                                    <td><%= record.teacherid %></td>
                                    <td><%= record.studentid %></td>
                                    <td><%= record.familymemberid %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <form action="/add-attendance" method="post" >
                    <label for="teacherID">Teacher ID:</label>
                    <input type="number" id="teacherID" name="teacherID" required>

                    <label for="studentID">Student ID:</label>
                    <input type="number" id="studentID" name="studentID" required>

                    <label for="familyMemberID">Family Member ID:</label>
                    <input type="number" id="familyMemberID" name="familyMemberID">

                    <input type="submit" value="Add Attendance Record" style="padding: 8px 16px; margin-right: 10px;">
                </form>
    <!-- Main content -->

    <!-- Footer -->

    <div class="footer">

        <div class="col1">

            <h3>Links</h3>
            <a href="/">Home</a>
            <a href="/About-us">About Us</a>
        </div>

        <div class="col2">
            <h3>SUBSCRIBE</h3>
            <form>
                <input type="Email" name="Your Email Address" placeholder="Your Email Address" required align="center">
                <br>
                <button>Subscribe Now!</button>
            </form>
        </div>


        <div class="col3">
            <h3>Contact us</h3>
            <p>Phone : 051-125892003</p>
            <p>
                Address : H11 Fast university  <br>
                Islamabad
            </p>

            <div class="mid"></div>
            <a href="https://www.facebook.com/">
                <i class="fa fa-facebook"></i>
            </a>
        </div>

    <!-- Footer -->
</body>
</html>